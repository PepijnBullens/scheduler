// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id       Int      @id @default(autoincrement())
  name     String   @unique
  password String
  admin    Boolean @default(false)
}

model Task {
  id          Int    @id @default(autoincrement())
  color       String?
  task        String
  date        DateTime
  description String?
}